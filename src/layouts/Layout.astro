<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Big Bang to Humankind</title>
    <link rel="icon" href="https://emojicdn.elk.sh/🪐" />

    <link
      rel="stylesheet"
      href="https://api.fontshare.com/v2/css?f[]=switzer@600,800,900,700,701,400,401,501,500&display=swap"
    />

    <script src="https://unpkg.com/alpinejs@3" defer></script>
    <style is:global>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>
  <body
    class="antialised text-gray-700 min-h-[90vh] grid grid-rows-[max-content,1fr]"
  >
    <nav class="mx-auto p-4 flex items-center gap-x-4">
      {
        ["Astronomy", "Biology"].map((label) => (
          <a
            href={`/${label.toLowerCase()}`}
            class:list={[
              "text-sm font-medium underline",
              {
                "text-gray-800 decoration-gray-400":
                  Astro.url.pathname === `/${label.toLowerCase()}`,
                "text-gray-400 decoration-gray-300":
                  Astro.url.pathname !== `/${label.toLowerCase()}`,
              },
            ]}
          >
            {label}
          </a>
        ))
      }
    </nav>
    <slot />
  </body>
</html>
